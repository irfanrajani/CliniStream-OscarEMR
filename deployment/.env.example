# ==========================================
# OSCAR EMR Environment Configuration
# Copy to .env and customize for your clinic
# ==========================================

# ========================================
# Database Configuration
# ========================================
MYSQL_ROOT_PASSWORD=CHANGE_ME_RANDOM_PASSWORD_ROOT
MYSQL_DATABASE=oscar_mcmaster
MYSQL_USER=oscar
MYSQL_PASSWORD=CHANGE_ME_RANDOM_PASSWORD_OSCAR

# ========================================
# Application Configuration
# ========================================
CLINIC_NAME=Your Clinic Name
TZ=America/Vancouver
FIRST_RUN=true

# ========================================
# Docker Images (use ghcr.io for production)
# ========================================
# Leave empty to use latest from GitHub Container Registry
# Or specify version: ghcr.io/irfanrajani/clinistream-oscaremr/oscar:v1.0.0
OSCAR_IMAGE=
WIZARD_IMAGE=
INTEGRATIONS_IMAGE=
BACKUP_IMAGE=

# ========================================
# Port Configuration
# ========================================
OSCAR_PORT=8567
WIZARD_PORT=8568

# ========================================
# Performance Tuning
# ========================================
OSCAR_MAX_MEMORY=2048m

# ========================================
# Security Settings
# ========================================
TRUST_PROXY=false
CLOUDFLARE_PROXY=false

# ========================================
# Integration Toggles
# (Configured via Setup Wizard or Admin Settings)
# ========================================
RINGCENTRAL_ENABLED=false
OCEAN_ENABLED=false
BC_LABS_ENABLED=false

# ========================================
# Backup Configuration
# ========================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# S3 Backup (optional)
S3_BACKUP_ENABLED=false
S3_BACKUP_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-west-2

# Backup Encryption (optional)
BACKUP_ENCRYPTION_ENABLED=false
BACKUP_ENCRYPTION_KEY=

# ========================================
# FIRST RUN INSTRUCTIONS
# ========================================
# 1. Copy this file: cp .env.example .env
# 2. Edit .env and change passwords
# 3. Run: docker compose pull
# 4. Run: docker compose --profile setup up -d
# 5. Visit http://localhost:8568 for Setup Wizard
# 6. Complete all 6 configuration steps
# 7. Access OSCAR at http://localhost:8567/oscar
